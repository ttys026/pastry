{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "pastry",
    "version": "0.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": false
    },
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "binary/OCR",
            "sidecar": true,
            "args": [
              "-l",
              "zh-Hans",
              "-i",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "binary/sendkeys",
            "sidecar": true,
            "args": [
              "--characters",
              {
                "validator": "\\S+"
              },
              "--initial-delay",
              "0"
            ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "identifier": "pastry.tianyi.li",
      "externalBin": ["binary/OCR", "binary/sendkeys"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "center": true,
        "visible": false,
        "width": 800,
        "height": 600
      }
    ]
  }
}
