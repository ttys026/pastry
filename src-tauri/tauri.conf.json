{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "tauri-app",
    "version": "0.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": false
    },
    "allowlist": {
      "all": false,
      "globalShortcut": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "binary/OCR",
            "sidecar": true,
            "args": [
              "-l",
              "zh-Hans",
              "-i",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "binary/sendkeys",
            "sidecar": true,
            "args": [
              "--characters",
              {
                "validator": "\\S+"
              },
              "--initial-delay",
              "0"
            ]
          }
        ]
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "pastry.tianyi.li",
      "externalBin": ["binary/OCR", "binary/sendkeys"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "closable": false,
        "transparent": true,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "decorations": false,
        "title": "Pastry",
        "width": 800,
        "height": 600
      }
    ],
    "macOSPrivateApi": true
  }
}
